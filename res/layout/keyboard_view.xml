<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#939393"
    android:id="@+id/unified_keyboard_view"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:enabled="true"
            android:id="@+id/enable_services_switch"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_weight="1"
            android:id="@+id/keyboard_options_display1">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_weight="1"
            android:id="@+id/keyboard_options_display2">
        </TextView>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_dialog_dialer"
            android:background="#939393"
            android:id="@+id/keyboard_preferences_edit"
            />
    </LinearLayout>
    <android.inputmethodservice.KeyboardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:id="@+id/keyboard_view_keys"
        ></android.inputmethodservice.KeyboardView>


</LinearLayout>